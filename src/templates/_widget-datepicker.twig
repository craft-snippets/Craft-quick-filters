{% set reQuestValue = craft.app.request.getBodyParam('criteria')[handle] ?? [] %}

{% set start = null %}
{% set end = null %}

{% for item in reQuestValue %}
    {% set parts = item|split(' ') %}
    {% if parts|length == 2 %}
        {% if parts[0] == '>=' %}
            {% set start = parts[1] %}
        {% endif %}
        {% if parts[0] == '<=' %}
            {% set end = parts[1] %}
        {% endif %}            
    {% endif %}
{% endfor %}

